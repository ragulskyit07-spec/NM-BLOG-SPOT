<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Microblog</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
      background-color: hwb(212 62% 3%);
      color: #e7e9ea;
      line-height: 1.6;
      min-height: 100vh;
    }

    .container {
      max-width: 600px;
      margin: 0 auto;
      padding: 0;
      background-color: hwb(241 6% 75%);
    }

    header {
      position: sticky;
      top: 0;
      background-color: lab(0% 0 0 / 0.979);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid #2f3336;
      padding: 16px 20px;
      z-index: 100;
    }

    header h1 {
      font-size: 20px;
      font-weight: 700;
      color: #e7e9ea;
      letter-spacing: -0.01em;
    }

    .form-container {
      border-bottom: 1px solid hsl(276, 34%, 45%);
      padding: 16px 20px;
      background-color: hsl(210, 40%, 48%);
    }

    .form-container h2 {
      font-size: 17px;
      font-weight: 600;
      color: #e7e9ea;
      margin-bottom: 16px;
    }

    .form-group {
      margin-bottom: 16px;
    }

    .form-group label {
      display: block;
      font-size: 13px;
      font-weight: 600;
      color: #8b98a5;
      margin-bottom: 8px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .form-group input,
    .form-group textarea {
      width: 100%;
      padding: 12px 16px;
      background-color: #192734;
      border: 1px solid #2f3336;
      border-radius: 8px;
      color: #e7e9ea;
      font-family: 'Inter', sans-serif;
      font-size: 15px;
      transition: all 0.2s ease;
    }

    .form-group input:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: #1d9bf0;
      background-color: #15202b;
      box-shadow: 0 0 0 1px #1d9bf0;
    }

    .form-group input::placeholder,
    .form-group textarea::placeholder {
      color: #6e767d;
    }

    .form-group textarea {
      resize: vertical;
      min-height: 100px;
      line-height: 1.5;
    }

    .btn {
      background-color: #1d9bf0;
      color: #ffffff;
      border: none;
      border-radius: 20px;
      padding: 10px 24px;
      font-size: 15px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.2s ease;
      font-family: 'Inter', sans-serif;
      letter-spacing: 0.2px;
    }

    .btn:hover {
      background-color: #1a8cd8;
      transform: translateY(-1px);
    }

    .btn:active {
      transform: translateY(0);
    }

    .posts-container {
      margin-top: 0;
    }

    .posts-container h2 {
      font-size: 17px;
      font-weight: 600;
      color: #e7e9ea;
      padding: 16px 20px;
      border-bottom: 1px solid #2f3336;
      background-color: hwb(210 20% 31%);
      position: sticky;
      top: 61px;
      backdrop-filter: blur(12px);
      z-index: 99;
    }

    .post-list {
      list-style: none;
    }

    .post-card {
      border-bottom: 1px solid #2f3336;
      padding: 16px 20px;
      transition: background-color 0.2s ease;
      position: relative;
    }

    .post-card:hover {
      background-color: rgba(255, 255, 255, 0.03);
    }

    .post {
      display: flex;
      flex-direction: column;
      gap: 8px;
      padding-right: 40px;
    }

    .post-title {
      font-size: 17px;
      font-weight: 700;
      color: #e7e9ea;
      line-height: 1.3;
      letter-spacing: -0.01em;
    }

    .post-content {
      font-size: 15px;
      color: #e7e9ea;
      line-height: 1.5;
      word-wrap: break-word;
      white-space: pre-wrap;
    }

    .post-meta {
      font-size: 13px;
      color: #6e767d;
      margin-top: 4px;
    }

    .post-meta em {
      font-style: normal;
    }

    .delete-btn {
      position: absolute;
      top: 16px;
      right: 16px;
      background-color: transparent;
      border: 1px solid hsl(0, 90%, 47%);
      border-radius: 50%;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.2s ease;
      color: #6e767d;
      padding: 0;
    }

    .delete-btn:hover {
      background-color: rgba(244, 33, 46, 0.1);
      border-color: #f4212e;
      color: #f4212e;
    }

    .delete-btn .material-icons {
      font-size: 18px;
    }

    .empty-state {
      color: hsl(167, 81%, 46%);
      text-align: center;
      font-size: 15px;
      padding: 40px 20px;
    }

    ::-webkit-scrollbar {
      width: 8px;
    }

    ::-webkit-scrollbar-track {
      background: #15202b;
    }

    ::-webkit-scrollbar-thumb {
      background: #2f3336;
      border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #4a5568;
    }

    @media (max-width: 600px) {
      .container {
        max-width: 100%;
      }
      
      header h1 {
        font-size: 18px;
      }
      
      .form-container,
      .post-card,
      .posts-container h2 {
        padding: 12px 16px;
      }
    }
  </style>
</head>
<body>

  <main class="container">
    
    <header>
      <h1>Sky Blog spot </h1>
    </header>
  
    <section class="form-container">
      <h2>Create a New Post</h2>
      <form id="postForm">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" placeholder="Post Title" required>
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          <textarea id="content" name="content" placeholder="What's on your mind?" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn">Create Post</button>
      </form>
    </section>

    <section class="posts-container">
      <h2>Recent Posts</h2>
      <ul class="post-list" id="postList">
        <li class="post-card empty-state">
          <p>No posts yet. Be the first!</p>
        </li>
      </ul>
    </section>

  </main>

  <script>
    let posts = [];
    let postIdCounter = 1;

    const postForm = document.getElementById('postForm');
    const postList = document.getElementById('postList');
    const titleInput = document.getElementById('title');
    const contentInput = document.getElementById('content');

    function createPost(title, content) {
      const post = {
        id: postIdCounter++,
        title: title,
        content: content,
        timestamp: new Date()
      };
      posts.unshift(post);
      renderPosts();
    }

    function deletePost(id) {
      posts = posts.filter(post => post.id !== id);
      renderPosts();
    }

    function renderPosts() {
      if (posts.length === 0) {
        postList.innerHTML = `
          <li class="post-card empty-state">
            <p>No posts yet. Be the first!</p>
          </li>
        `;
        return;
      }

      postList.innerHTML = posts.map(post => `
        <li class="post-card">
          <article class="post">
            <h3 class="post-title">${escapeHtml(post.title)}</h3>
            <p class="post-content">${escapeHtml(post.content)}</p>
            <p class="post-meta">
              Posted on: <em>${post.timestamp.toLocaleString()}</em>
            </p>
          </article>
          <button class="delete-btn" onclick="deletePost(${post.id})" title="Delete post">
            <span class="material-icons">delete_outline</span>
          </button>
        </li>
      `).join('');
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    postForm.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const title = titleInput.value.trim();
      const content = contentInput.value.trim();
      
      if (title && content) {
        createPost(title, content);
        titleInput.value = '';
        contentInput.value = '';
      }
    });

    renderPosts();
  </script>

</body>
</html